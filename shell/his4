#!/bin/bash
DBNAME="data_way"
createDbSql="create database IF NOT EXISTS ${DBNAME}"
HOSTNAME="localhost"
PORT="3306"
USERNAME="root"
PASSWORD="root"
TABLENAME="data_table_way"
createTableSql="create table IF NOT EXISTS ${TABLENAME} (  name varchar(20), id int(11) default 0 )"
mysql -h${HOSTNAME}  -P${PORT}  -u${USERNAME} -p${PASSWORD}  -D ${DBNAME}   -e "${createTableSql}"